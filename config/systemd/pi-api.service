[Unit]
Description=Raspberry Pi iOS Bridge API Server
After=network.target usbmuxd.service
Requires=usbmuxd.service

[Service]
Type=simple
User=pi
WorkingDirectory=/home/pi/raspi-ios-bridge/pi-api
ExecStart=/usr/bin/node server.js
Restart=on-failure
RestartSec=10s
StandardOutput=journal
StandardError=journal

# Environment
Environment=NODE_ENV=production
Environment=PORT=3000

[Install]
WantedBy=multi-user.target
